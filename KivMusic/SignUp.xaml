<Page x:Class="KivMusic.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KivMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid Background="Green">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="339*"/>
            <ColumnDefinition Width="230*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" Width="330" VerticalAlignment="Center">
            <Label Content="Фамилия"/>
            <TextBox x:Name="txtLastName" Margin="0,0,0,10"/>
            <Label Content="Имя"/>
            <TextBox x:Name="txtFirtsName" Margin="0,0,0,10"/>
            <Label Content="Отчество"/>
            <TextBox x:Name="txtPatronymic" Margin="0,0,0,10"/>
            <Label Content="Логин"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>
            <Label Content="Пароль"/>
            <TextBox x:Name="txtPass" Margin="0,0,0,10"/>
            <Button x:Name="btnSignUp" Content="Зарегистрироватся" Margin="0,0,0,10" Click="btnSignUp_Click"/>
            <Button x:Name="btnBack" Content="Назад" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
