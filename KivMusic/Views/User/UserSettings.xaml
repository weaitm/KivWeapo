<Page x:Class="KivMusic.Views.User.UserSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KivMusic.Views.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserSettings">

    <Grid Background="Green">
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MinWidth="600">
            <Button Name="btnCardWin" Content="Добавить карту" Margin="5" Click="btnCardWin_Click"/>
            <Button Name="btnBack" Content="Назад" Margin="5" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
